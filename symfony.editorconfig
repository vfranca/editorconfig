# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.php,*.json}]
indent_style = space
indent_size = 4

[{*.twig,*.html}]
indent_style = tab

[*js]
indent_size = 2

[{*.md,*.markdown}]
trim_trailing_whitespace = false
indent_size = 2
